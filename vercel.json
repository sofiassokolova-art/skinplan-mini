{
  "framework": "nextjs",
  "buildCommand": "npm run build && npx prisma migrate deploy",
  "outputDirectory": ".next",
  "installCommand": "npm install && npx prisma generate",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/cleanup-logs",
      "schedule": "0 0 * * 0"
    }
  ]
}